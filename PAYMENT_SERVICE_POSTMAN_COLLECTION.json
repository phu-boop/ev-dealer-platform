{
  "info": {
    "name": "Payment Service API Tests",
    "description": "Collection để test Payment Service qua Gateway",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "orderId1",
      "value": "684e4a1a-aa4b-4c01-9072-ccc6624ada9c",
      "type": "string"
    },
    {
      "key": "orderId2",
      "value": "b2c3d4e5-f6a7-4890-b123-456789012345",
      "type": "string"
    },
    {
      "key": "paymentMethodId",
      "value": "02c1aef0-5482-4119-9d46-693710b77145",
      "type": "string"
    },
    {
      "key": "customerId",
      "value": "3",
      "type": "string"
    },
    {
      "key": "transactionId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@gmail.com\",\n  \"password\": \"your_password\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.data && jsonData.data.accessToken) {",
                  "        pm.environment.set('token', jsonData.data.accessToken);",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "2. Payment Methods APIs",
      "item": [
        {
          "name": "GET - Get All Payment Methods",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/payments/api/v1/payments/methods",
              "host": ["{{baseUrl}}"],
              "path": ["payments", "api", "v1", "payments", "methods"]
            }
          }
        },
        {
          "name": "GET - Get Active Public Methods",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/payments/api/v1/payments/methods/active-public",
              "host": ["{{baseUrl}}"],
              "path": ["payments", "api", "v1", "payments", "methods", "active-public"]
            }
          }
        },
        {
          "name": "GET - Get Payment Method by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/payments/api/v1/payments/methods/{{paymentMethodId}}",
              "host": ["{{baseUrl}}"],
              "path": ["payments", "api", "v1", "payments", "methods", "{{paymentMethodId}}"]
            }
          }
        },
        {
          "name": "POST - Create Payment Method (ADMIN)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"methodName\": \"VNPAY Gateway\",\n  \"methodType\": \"GATEWAY\",\n  \"scope\": \"B2C\",\n  \"isActive\": true,\n  \"configJson\": \"{\\\"gatewayUrl\\\": \\\"https://sandbox.vnpayment.vn\\\", \\\"tmnCode\\\": \\\"TEST\\\"}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/payments/api/v1/payments/methods",
              "host": ["{{baseUrl}}"],
              "path": ["payments", "api", "v1", "payments", "methods"]
            }
          }
        },
        {
          "name": "PUT - Update Payment Method (ADMIN)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"methodName\": \"Thanh toán tiền mặt (Đã cập nhật)\",\n  \"methodType\": \"MANUAL\",\n  \"scope\": \"B2C\",\n  \"isActive\": true,\n  \"configJson\": null\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/payments/api/v1/payments/methods/{{paymentMethodId}}",
              "host": ["{{baseUrl}}"],
              "path": ["payments", "api", "v1", "payments", "methods", "{{paymentMethodId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "3. Customer Payment APIs",
      "item": [
        {
          "name": "POST - Initiate Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 50000.00,\n  \"paymentMethodId\": \"{{paymentMethodId}}\",\n  \"notes\": \"Thanh toán đặt cọc đơn hàng\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/payments/api/v1/payments/customer/orders/{{orderId1}}/pay",
              "host": ["{{baseUrl}}"],
              "path": ["payments", "api", "v1", "payments", "customer", "orders", "{{orderId1}}", "pay"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.data && jsonData.data.transactionId) {",
                  "        pm.environment.set('transactionId', jsonData.data.transactionId);",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "POST - Confirm Manual Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/payments/api/v1/payments/customer/transactions/{{transactionId}}/confirm",
              "host": ["{{baseUrl}}"],
              "path": ["payments", "api", "v1", "payments", "customer", "transactions", "{{transactionId}}", "confirm"]
            }
          }
        },
        {
          "name": "GET - Get Payment History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/payments/api/v1/payments/customer/orders/{{orderId1}}/history",
              "host": ["{{baseUrl}}"],
              "path": ["payments", "api", "v1", "payments", "customer", "orders", "{{orderId1}}", "history"]
            }
          }
        },
        {
          "name": "GET - Get Customer Total Debt",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/payments/api/v1/payments/customer/{{customerId}}/debt",
              "host": ["{{baseUrl}}"],
              "path": ["payments", "api", "v1", "payments", "customer", "{{customerId}}", "debt"]
            }
          }
        }
      ]
    }
  ]
}

