# Customer Service Environment Variables Configuration
# Copy this file to .env and update the values as needed

# Database Configuration
DB_URL=jdbc:mysql://localhost:3307/customer_db?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
DB_USERNAME=root
DB_PASSWORD=12345678

# Server Configuration
SERVER_PORT=8082
SPRING_APP_NAME=customer-service

# External Services URLs
# TODO: Update these URLs when User Service and Notification Service are ready

# User Service - để lấy thông tin nhân viên
# Development: http://localhost:8081/api/users
# Docker: http://user-service:8081/api/users
# Production: https://your-domain.com/api/users
USER_SERVICE_URL=http://localhost:8081/api/users

# Notification Service - để gửi thông báo
# Development: http://localhost:8085/api/notifications
# Docker: http://payment-service:8085/api/notifications (hoặc notification-service nếu có)
# Production: https://your-domain.com/api/notifications
NOTIFICATION_SERVICE_URL=http://localhost:8085/api/notifications

# ========================================
# EMAIL CONFIGURATION
# ========================================

# Gmail SMTP Configuration
# Note: Bạn cần tạo App Password trong Google Account nếu dùng Gmail
# https://myaccount.google.com/apppasswords
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Alternative: Use other SMTP providers
# - Outlook: smtp-mail.outlook.com:587
# - SendGrid: smtp.sendgrid.net:587
# - AWS SES: email-smtp.us-east-1.amazonaws.com:587

# Application URLs
APP_BASE_URL=http://localhost:8082
APP_FRONTEND_URL=http://localhost:5173
