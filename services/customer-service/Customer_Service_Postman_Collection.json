      "name": "Create Customer",
      "item": [
        {
          "name": "Create Individual Customer (Success)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Response has customer code\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data.customerCode).to.match(/^CUS-\\d{8}-\\d{4}$/);",
                  "});",
                  "",
                  "pm.test(\"Customer ID is generated\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data.customerId).to.be.a('number');",
                  "    pm.environment.set(\"customer_id\", jsonData.data.customerId);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Nguyen Van\",\n  \"lastName\": \"An\",\n  \"email\": \"nguyenvanan@gmail.com\",\n  \"phone\": \"0901234567\",\n  \"address\": \"123 Nguyen Hue, Quan 1, TP.HCM\",\n  \"idNumber\": \"001234567890\",\n  \"customerType\": \"INDIVIDUAL\",\n  \"registrationDate\": \"2025-10-11\",\n  \"status\": \"ACTIVE\",\n  \"preferredDealerId\": 1\n}"
